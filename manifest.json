{
  "manifest_version": 3,
  "name": "Auto Select Option - HU Evaluation",
  "version": "3.0",
  "description": "Auto-fill and submit Course & Teacher evaluations for Hamdard University Student Portal, developed by Jamil Ahmed",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://sp.hamdard.edu.pk/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}